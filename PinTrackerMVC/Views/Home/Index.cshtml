@{
    ViewData["Title"] = "Home Page";
}


<div id="index-section">
    <div class="text-center">
        <h1 class="display-4">Welcome to the Portland Pinball Tracker!</h1>

        <p>This map displays all the pinball machines and their locations in the city of Portland!</p>

        <select class="form-control" id="SearchBy" name="SearchBy">
            <option>Search by machine</option> 
            <option>Search by location</option> 
        </select>

        @using (Html.BeginForm("Search", "Locations"))
        {
            <input type="text" placeholder="Search.." name="Search" class="form-control"/>
						<br>
            <input type="submit"  value="Search!" class="btn btn-dark btn-lg">
        }   
    </div> 
</div>


<div id='map' style='width: 600px; height: 500px;'></div>
<script>
	mapboxgl.accessToken = 'pk.eyJ1IjoicGllaGFyZCIsImEiOiJjazhxZjBnYXQwMzh0M2lxc2d0dGY0dzB6In0.AMqWRFCTZDB00Wev4G3GtQ';
var map = new mapboxgl.Map({
container: 'map', // container id
style: 'mapbox://styles/mapbox/streets-v11',
center: [-122.6, 45.5], // starting position
zoom: 9 // starting zoom
});
 
// Add zoom and rotation controls to the map.
map.addControl(new mapboxgl.NavigationControl());
</script>